# Environment Configuration
NODE_ENV=development

# FalkorDB Configuration
# Option 1: Use connection URL with embedded credentials (recommended for remote deployments)
# FALKORDB_URL=falkordb://username:password@your-host.com:6379
# FALKORDB_URL=falkordb://your-api-key@your-host.com:6379

# Option 2: Use individual connection parameters (fallback)
FALKORDB_HOST=localhost
FALKORDB_PORT=6379
FALKORDB_USERNAME=
FALKORDB_PASSWORD=

# Redis Configuration (for key-value operations)
REDIS_URL=redis://localhost:6379
REDIS_USERNAME=
REDIS_PASSWORD=

# Logging Configuration (optional)
ENABLE_FILE_LOGGING=false